<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreen">

    <ImageView
        android:id="@+id/u1"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/three" />

    <ImageView
        android:id="@+id/u3"
        android:layout_width="50dp"
        android:layout_height="74dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/u2"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/five" />

    <Button
        android:id="@+id/throwbtn"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:text="Throw"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u5" />

    <Button
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:text="Score"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/throwbtn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="4dp"
        android:text="User"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="Computer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/c1"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/five" />

    <ImageView
        android:id="@+id/c5"
        android:layout_width="52dp"
        android:layout_height="79dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="188dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/c4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/four" />

    <ImageView
        android:id="@+id/u5"
        android:layout_width="52dp"
        android:layout_height="79dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/u4"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/four" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="56dp"
        android:layout_height="88dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/c1"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/u4"
        android:layout_width="56dp"
        android:layout_height="88dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="19dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/u1"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/c3"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="68dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/c2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three" />

    <ImageView
        android:id="@+id/c4"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/six" />

    <ImageView
        android:id="@+id/u2"
        android:layout_width="51dp"
        android:layout_height="77dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/u1"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/six" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="393dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c5"
        app:srcCompat="@drawable/redline" />

    <TextView
        android:id="@+id/computer_score"
        android:layout_width="53dp"
        android:layout_height="29dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="32dp"
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_score"
        android:layout_width="57dp"
        android:layout_height="33dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="12dp"
        android:text="Score"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="237dp"
        android:text="Score"
        android:textColor="#070707"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="176dp"
        android:text="Rounds : 0"
        android:textColor="#F60909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c4" />

</androidx.constraintlayout.widget.ConstraintLayout>